#:kivy 2.1.0

# Modern UI color schemes and styles
#:set primary_color (0.2, 0.7, 0.9, 1)  # Bright blue
#:set accent_color (0.95, 0.5, 0.2, 1)  # Orange
#:set dark_bg_color (0.12, 0.12, 0.18, 1)  # Dark navy
#:set light_text_color (0.95, 0.95, 0.95, 1)  # Almost white
#:set subtle_color (0.6, 0.6, 0.7, 1)  # Subtle gray-purple

<RoundedButton@Button>:
    background_color: (0, 0, 0, 0)  # Transparent
    background_normal: ''
    canvas.before:
        Color:
            rgba: primary_color if self.state == 'normal' else [c*0.8 for c in primary_color]
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]
    color: light_text_color
    font_size: '16sp'
    bold: True
    size_hint_y: None
    height: '50dp'
    padding: [15, 10]

<AccentButton@Button>:
    background_color: (0, 0, 0, 0)  # Transparent
    background_normal: ''
    canvas.before:
        Color:
            rgba: accent_color if self.state == 'normal' else [c*0.8 for c in accent_color]
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]
    color: light_text_color
    font_size: '16sp'
    bold: True
    size_hint_y: None
    height: '50dp'
    padding: [15, 10]

<ModernTextInput@TextInput>:
    multiline: False
    padding: [10, 10, 10, 5]
    background_normal: ''
    background_active: ''
    size_hint_y: None
    height: '50dp'
    font_size: '16sp'
    cursor_color: primary_color
    canvas.before:
        Color:
            rgba: (0.2, 0.2, 0.2, 1) if root.parent.dark_mode else (0.95, 0.95, 0.95, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8]
        Color:
            rgba: primary_color if self.focus else (0.3, 0.3, 0.3, 1) if root.parent.dark_mode else (0.8, 0.8, 0.8, 1)
        Line:
            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 8]
            width: 1.2

<HeaderLabel@Label>:
    font_size: '24sp'
    bold: True
    size_hint_y: None
    height: self.texture_size[1] + 20
    padding: [15, 15]
    color: light_text_color
    canvas.before:
        Color:
            rgba: (0.15, 0.15, 0.2, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<WelcomeScreen>:
    canvas.before:
        Color:
            rgba: dark_bg_color
        Rectangle:
            pos: self.pos
            size: self.size
            
    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        padding: [30, 60, 30, 60]

        Image:
            source: "assets/Kharcha_Book_Symbol.png"
            size_hint: (1, 0.5)
            fit_mode: "contain"  

        Label:
            text: "[b][color=#64E0FF]Kharcha[/color] [color=#FFFFFF]Book[/color][/b]"
            markup: True
            font_size: '58sp'
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

        Label:
            id: tagline_label
            text: "[i][color=#A0E0FF]Money Talks — Make Sure It Says 'Well Spent!'[/color][/i]"
            markup: True
            font_size: '22sp'
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

<LoginScreen>:
    canvas.before:
        Color:
            rgba: dark_bg_color
        Rectangle:
            pos: self.pos
            size: self.size
            
    FloatLayout:
        # Dark mode switch at top-right
        Switch:
            id: dark_mode_switch
            size_hint: None, None
            size: '60dp', '30dp'
            active: True
            on_active: root.toggle_dark_mode(*args)
            pos_hint: {'right': 0.98, 'top': 0.98}
            opacity: 0  # Hide the dark mode switch

        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            padding: [40, 60, 40, 60]
            size_hint: (0.9, 0.8)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            
            # Title with dynamic color
            Label:
                text: '[b]Kharcha Book[/b]'
                markup: True
                font_size: '36sp'
                size_hint_y: None
                height: '70dp'
                color: light_text_color

            Widget:
                size_hint_y: None
                height: '20dp'
                
            # Username field
            Label:
                text: 'Username'
                color: light_text_color
                font_size: '16sp'
                size_hint_y: None
                height: '30dp'
                halign: 'left'
                text_size: self.size
                
            TextInput:
                id: username
                hint_text: 'Enter your username'
                size_hint_y: None
                height: '50dp'
                padding: [15, 15]
                multiline: False
                background_normal: ''
                background_color: (0.18, 0.18, 0.23, 1)
                foreground_color: light_text_color
                cursor_color: (primary_color[0], primary_color[1], primary_color[2], 1)
                font_size: '16sp'

            Widget:
                size_hint_y: None
                height: '10dp'
                
            # Password field
            Label:
                text: 'Password'
                color: light_text_color
                font_size: '16sp'
                size_hint_y: None
                height: '30dp'
                halign: 'left'
                text_size: self.size
                
            TextInput:
                id: password
                hint_text: 'Enter your password'
                password: True
                size_hint_y: None
                height: '50dp'
                padding: [15, 15]
                multiline: False
                background_normal: ''
                background_color: (0.18, 0.18, 0.23, 1)
                foreground_color: light_text_color
                cursor_color: (primary_color[0], primary_color[1], primary_color[2], 1)
                font_size: '16sp'

            Widget:
                size_hint_y: None
                height: '20dp'
                
            # Login button
            BoxLayout:
                orientation: 'vertical'
                spacing: 15
                size_hint_y: None
                height: '120dp'
                
                Button:
                    text: 'Login'
                    size_hint_y: None
                    height: '50dp'
                    background_normal: ''
                    background_color: primary_color
                    color: light_text_color
                    font_size: '18sp'
                    bold: True
                    on_press: root.login_user()
                    canvas.before:
                        Color:
                            rgba: primary_color if self.state == 'normal' else [c*0.8 for c in primary_color]
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [25]

                Button:
                    text: 'Register'
                    size_hint_y: None
                    height: '50dp'
                    background_normal: ''
                    background_color: (0, 0, 0, 0)
                    color: primary_color
                    font_size: '18sp'
                    bold: True
                    on_press: root.register_user()
                    canvas.before:
                        Color:
                            rgba: (0.2, 0.2, 0.25, 1) if self.state == 'normal' else (0.25, 0.25, 0.3, 1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [25]
                        Color:
                            rgba: primary_color
                        Line:
                            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 25]
                            width: 1.5

