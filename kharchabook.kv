<AddExpenseScreen>:
    canvas.before:
        Color:
            rgba: dark_bg_color
        Rectangle:
            pos: self.pos
            size: self.size
            
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: [30, 40, 30, 40]

        Label:
            text: "[b]Add New Expense[/b]"
            markup: True
            font_size: '28sp'
            size_hint_y: None
            height: '50dp'
            color: light_text_color

        BoxLayout:
            orientation: 'vertical'
            spacing: 15
            padding: [10, 10]
            size_hint_y: None
            height: self.minimum_height
            
            Label:
                text: "Date (M/DD/YY)"
                color: light_text_color
                font_size: '16sp'
                size_hint_y: None
                height: '30dp'
                halign: 'left'
                text_size: self.size
                
            BoxLayout:
                spacing: 10
                size_hint_y: None
                height: '50dp'
                
                TextInput:
                    id: date_input
                    multiline: False
                    size_hint_x: 0.8
                    background_normal: ''
                    background_color: (0.18, 0.18, 0.23, 1)
                    foreground_color: light_text_color
                    padding: [15, 15]
                    font_size: '16sp'
                    
                Button:
                    text: "Pick Date"
                    size_hint_x: 0.2
                    background_normal: ''
                    background_color: primary_color
                    on_release: root.show_date_picker()
                    canvas.before:
                        Color:
                            rgba: primary_color if self.state == 'normal' else [c*0.8 for c in primary_color]
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [8]

                Button:
                    text: "Clear"
                    size_hint_x: 0.3
                    on_release: root.clear_fields()

            Label:
                text: "Amount"
                color: light_text_color
                font_size: '16sp'
                size_hint_y: None
                height: '30dp'
                halign: 'left'
                text_size: self.size
                
            TextInput:
                id: amount_input
                multiline: False
                size_hint_y: None
                height: '50dp'
                background_normal: ''
                background_color: (0.18, 0.18, 0.23, 1)
                foreground_color: light_text_color
                padding: [15, 15]
                font_size: '16sp'

            Label:
                text: "Category"
                color: light_text_color
                font_size: '16sp'
                size_hint_y: None
                height: '30dp'
                halign: 'left'
                text_size: self.size
                
            TextInput:
                id: category_input
                multiline: False
                size_hint_y: None
                height: '50dp'
                background_normal: ''
                background_color: (0.18, 0.18, 0.23, 1)
                foreground_color: light_text_color
                padding: [15, 15]
                font_size: '16sp'

        Widget:
            size_hint_y: 1
            
        BoxLayout:
            orientation: 'horizontal'
            spacing: 15
            size_hint_y: None
            height: '50dp'
            
            Button:
                text: "Save Expense"
                background_normal: ''
                background_color: accent_color
                color: light_text_color
                font_size: '18sp'
                bold: True
                on_press: root.save_expense()
                canvas.before:
                    Color:
                        rgba: accent_color if self.state == 'normal' else [c*0.8 for c in accent_color]
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
                
            Button:
                text: "Cancel"
                background_normal: ''
                background_color: (0.3, 0.3, 0.35, 1)
                color: light_text_color
                font_size: '18sp'
                on_press: root.back_to_home()
                canvas.before:
                    Color:
                        rgba: (0.3, 0.3, 0.35, 1) if self.state == 'normal' else (0.35, 0.35, 0.4, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]

<ViewExpenseScreen>:
    canvas.before:
        Color:
            rgba: dark_bg_color
