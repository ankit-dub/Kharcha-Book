                        color: 1, 1, 0, 1  # Yellow

                    Label:
                        text: "Amount"
                        bold: True
                        font_size: '16sp'
                        color: 1, 1, 0, 1  # Yellow

                    Label:
                        text: "Category"
                        bold: True
                        font_size: '16sp'
                        color: 1, 1, 0, 1  # Yellow


        Button:
            text: "Back to Home"
            size_hint: (0.4, None)
            height: '50dp'
            pos_hint: {'center_x': 0.5}
            background_normal: ''
            background_color: (0, 0, 0, 0)
            color: subtle_color
            font_size: '16sp'
            on_press: root.back_to_home()
            canvas.before:
                Color:
                    rgba: (0.2, 0.2, 0.25, 1) if self.state == 'normal' else (0.25, 0.25, 0.3, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [25]
                Color:
                    rgba: subtle_color
                Line:
                    rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 25]
                    width: 1.2
