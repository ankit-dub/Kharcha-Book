<HomeScreen>:
    canvas.before:
        Color:
            rgba: dark_bg_color
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 25
        padding: [30, 50, 30, 50]

        Label:
            text: "[b]Welcome to Kharcha Book![/b]"
